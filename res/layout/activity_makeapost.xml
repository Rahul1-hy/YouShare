<?xml version="1.0" encoding="utf-8"?>


  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="#35343d" >

      <!-- Header  Starts -->

      <LinearLayout
          android:id="@+id/header"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:background="@layout/header_gradient"
          android:paddingBottom="5dip"
          android:paddingTop="5dip" >

          <!-- Logo Start -->

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dip"
              android:src="@drawable/logo" />
          <!-- Logo Ends -->
      </LinearLayout>
      <!-- Header Ends -->

	<ScrollView android:layout_below="@+id/header"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">
      <!-- Login Form -->

      <LinearLayout
          android:id="@+id/linearLayout1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:padding="10dip" >

          <TextView
              android:id="@+id/newpost"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:text="New YouShare Post"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:textColor="#C1C6CC"
              android:textStyle="bold"
              android:typeface="sans" />

          <TextView
              android:id="@+id/textView2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="20dp"
              android:text="What&apos;s this post about?(Short Description)"
              android:textColor="#C1C6CC" />

          <TextView
              android:id="@+id/textView3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="(optional but recommended)"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:textColor="#54AD68" />

          <EditText
              android:id="@+id/message"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:ems="10"
              android:inputType="textMultiLine"
              android:textColor="#C1C6CC" >

              <requestFocus />
          </EditText>

          <TextView
              android:id="@+id/textView4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:text="Any relevant link for the post?"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:textColor="#C1C6CC" />

          <TextView
              android:id="@+id/textView5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="(optional but recommended)"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:textColor="#54AD68" />

          <EditText
              android:id="@+id/link"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:ems="10"
              android:textColor="#C1C6CC" />

          <TextView
              android:id="@+id/textView6"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:text="Any relevant image to upload with the post?"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:textColor="#C1C6CC" />

          <TextView
              android:id="@+id/textView7"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="(optional but recommended)"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:textColor="#54AD68" />

          <ImageView
              android:id="@+id/confirmImage"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_gravity="center_horizontal"
               />

          <TextView
              android:id="@+id/selAnotherImage"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="*Tap on the image to choose another image instead of this one."
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:textColor="@color/reddish"
              android:textStyle="italic"
              android:typeface="sans"
              android:visibility="gone" />

          <Button
              android:id="@+id/uploadPostImage"
              style="?android:attr/buttonStyleSmall"
              android:layout_width="wrap_content"
              android:layout_height="40dp"
              android:layout_gravity="center_horizontal"
              android:text="Upload Image"
              android:textColor="#C1C6CC" />

          <Button
              android:id="@+id/cancelBtn"
              style="?android:attr/buttonStyleSmall"
              android:layout_width="112dp"
              android:layout_height="40dp"
              android:layout_gravity="center_horizontal"
              android:text="Cancel"
              android:textColor="#C1C6CC"
              android:visibility="gone" />

          <ProgressBar
              android:id="@+id/progressBar1"
              style="?android:attr/progressBarStyleHorizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

          <TextView
              android:id="@+id/textView8"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="*Please fill at least one of the above 3 fields.And for a well organised post, please provide as much details as you can."
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:textColor="#54AD68" />

          <TextView
              android:id="@+id/textView9"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:text="In which category does this post fit the best?"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:textColor="#C1C6CC" />
          <TextView
              android:id="@+id/textView89"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="*This is important."
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:textColor="#54AD68" />

          <Spinner
              android:id="@+id/spinner1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:popupBackground="#0e1d23"
              android:textColor="#C1C6CC" />

          <Button
              android:id="@+id/makePostNow"
              style="?android:attr/buttonStyleSmall"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_marginTop="20dp"
              android:text="Post Now"
              android:textColor="#C1C6CC" />
          
          <Button
              android:id="@+id/backHome"
              style="?android:attr/buttonStyleSmall"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_marginTop="20dp"
              android:text="Back To Home"
              android:textColor="#C1C6CC" />

      </LinearLayout>

	</ScrollView>
      <!-- Login Form Ends -->
  </RelativeLayout>

