<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">
<RelativeLayout 
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="#35343d" >
              
    <!--  Header  Starts-->
  		<LinearLayout android:id="@+id/header"
  				android:layout_width="fill_parent"
  				android:layout_height="wrap_content"
  				android:background="@layout/header_gradient"
  				android:paddingTop="5dip"
  				android:paddingBottom="5dip">
  				<!-- Logo Start-->
  				<ImageView  android:src="@drawable/logo"
  							android:layout_width="wrap_content"
  							android:layout_height="wrap_content"
  							android:layout_marginLeft="10dip"/>
  				<!-- Logo Ends -->
  		</LinearLayout>
  		<!--  Header Ends --> 
  		<!-- Footer Start -->
	
	<RelativeLayout
		 
		  android:orientation="vertical"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:padding="10dip"
		  android:layout_below="@id/header">

<TextView
    android:id="@+id/detailsReg"
    android:layout_width="200dp"
    android:layout_height="40dp"
    android:layout_centerHorizontal="true"
    android:gravity="center|center_horizontal"
    android:text="Your Registration Details"
    android:textAppearance="?android:attr/textAppearanceSmallInverse"
    android:textColor="@color/bluish"
    android:textSize="17sp"
    android:textStyle="bold"
    android:typeface="sans" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/detailsReg"
        android:text="First Name"
        android:textColor="@color/bluish"
        android:textSize="15sp" />

    <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/fname"
            android:textColor="#000000"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>

    <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/email"
            android:textColor="#000000"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/fname"
            android:textSize="15sp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView7"
        android:text="Username"
        android:textColor="@color/bluish"
        android:textIsSelectable="false"
        android:textSize="15sp" />

    <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/uname"
            android:textColor="#000000"
            android:layout_below="@+id/email"
            android:layout_alignLeft="@+id/email"
            android:textSize="15sp"/>

    <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/regat"
            android:textColor="#000000"
            android:layout_below="@+id/textView9"
            android:layout_alignRight="@+id/lname"
            android:textSize="15sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/lname"
        android:layout_alignBottom="@+id/lname"
        android:layout_alignLeft="@+id/textView3"
        android:text="Last Name"
        android:textColor="@color/bluish"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_above="@+id/uname"
        android:layout_alignLeft="@+id/textView9"
        android:text="E-mail"
        android:textColor="@color/bluish"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/regat"
        android:layout_alignBottom="@+id/regat"
        android:layout_alignParentLeft="true"
        android:text="Registered at"
        android:textColor="@color/bluish"
        android:textSize="15sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regat"
        android:layout_centerHorizontal="true"
        android:text="Back To Home"
        android:textColor="#C1C6CC"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/lname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fname"
        android:textColor="#000000"
        android:textSize="15sp" />
	
</RelativeLayout>
</RelativeLayout>
</ScrollView>